nextflow_workflow {

    name "Test Subworkflow CHECK_QUALITY"
    script "../main.nf"
    workflow "CHECK_QUALITY"
    config './nextflow.config'

    test("faa") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id: 'test_faa' ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/proteome_test.faa', checkIfExists: true)
                ])
                input[1] = false
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(
                    workflow.out.fasta,
                    workflow.out.multiqc_files,
                    workflow.out.versions.collect { path(it).yaml }.unique()
                ).match() }
            )
        }
    }

    test("faa - stub") {

        options "-stub"

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id: 'test_stub' ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/proteome_test.faa', checkIfExists: true)
                ])
                input[1] = false
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    workflow.out,
                    workflow.out.versions.collect{ path(it).yaml }.unique()
                ).match() }
            )
        }
    }

}
