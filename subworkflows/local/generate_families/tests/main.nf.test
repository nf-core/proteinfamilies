nextflow_workflow {

    name "Test Subworkflow GENERATE_FAMILIES"
    script "../main.nf"
    workflow "GENERATE_FAMILIES"

    test("fasta") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id: 'test' ],
                    file(params.pipelines_testdata_base_path + 'test_data/mgnifams_input_small.fa', checkIfExists: true)
                ])
                input[1] = Channel.of([
                    [ id: 'test' ],
                    [
                        file(params.pipelines_testdata_base_path + 'test_data/subworkflows/chunk_1.fasta', checkIfExists: true),
                        file(params.pipelines_testdata_base_path + 'test_data/subworkflows/chunk_2.fasta', checkIfExists: true)
                    ]
                ])
                input[2] = "famsa"   // alignment_tool
                input[3] = true      // trim_msa
                input[4] = "clipkit" // clipkit_out_format
                input[5] = false     // hmmsearch_write_target
                input[6] = true      // hmmsearch_write_domain
                input[7] = true      // recruit_sequences_with_models
                input[8] = 0.9       // hmmsearch_query_length_threshold
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(
                    file(workflow.out.hmm[0][1]).name,
                    workflow.out.seed_msa,
                    workflow.out.full_msa,
                    workflow.out.fasta,
                    workflow.out.versions.collect { path(it).yaml }.unique()
                    ).match()}
            )
        }
    }

}
