nextflow_process {

    name "Test Process CHUNK_CLUSTERS"
    script "../main.nf"
    process "CHUNK_CLUSTERS"

    test("proteinfamilies - tsv") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id: 'test_tsv' ], // meta map
                    file(params.pipelines_testdata_base_path + 'test_data/modules/clustering.tsv', checkIfExists: true)
                ])
                input[1] = Channel.of([
                    [ id: 'test_fasta' ], // meta map
                    file(params.pipelines_testdata_base_path + 'test_data/mgnifams_input_small.faa', checkIfExists: true)
                ])
                input[2] = 5
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.fasta_chunks,
                    process.out.versions.collect { path(it).yaml }
                    ).match()}
            )
        }
    }

    test("proteinfamilies - tsv - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id: 'test_tsv' ], // meta map
                    file(params.pipelines_testdata_base_path + 'test_data/modules/clustering.tsv', checkIfExists: true)
                ])
                input[1] = Channel.of([
                    [ id: 'test_fasta' ], // meta map
                    file(params.pipelines_testdata_base_path + 'test_data/mgnifams_input_small.faa', checkIfExists: true)
                ])
                input[2] = 5
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }
}
