nextflow_process {

    name "Test Process SEQKIT_STATS_TO_MQC"
    script "../main.nf"
    process "SEQKIT_STATS_TO_MQC"

    tag "seqkit"
    tag "seqkit/stats"

    setup {
        run("SEQKIT_STATS") {
            script "../../../nf-core/seqkit/stats/main.nf"
            process {
                """
                input[0] = Channel.of([
                    [ id: 'fasta' ],
                    file(params.pipelines_testdata_base_path + 'test_data/mgnifams_input_small.fa', checkIfExists: true)
                ])
                """
            }
        }
    }

    test("proteinfamilies - fasta") {

        when {
            process {
                """
                input[0] = SEQKIT_STATS.out.stats
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.mqc,
                    process.out.versions,
                    path(process.out.versions[0]).yaml
                    ).match()}
            )
        }
    }

    test("proteinfamilies - fasta - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = SEQKIT_STATS.out.stats
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.mqc,
                    process.out.versions,
                    path(process.out.versions[0]).yaml
                ).match()
                }
            )
        }

    }
}
