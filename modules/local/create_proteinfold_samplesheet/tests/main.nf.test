nextflow_process {

    name "Test Process CREATE_PROTEINFOLD_SAMPLESHEET"
    script "../main.nf"
    process "CREATE_PROTEINFOLD_SAMPLESHEET"

    setup {
        run("SPLIT_FASTA") {
            script "../../split_fasta/main.nf"
            process {
                """
                input[0] = Channel.of([
                    [ id: 'test' ],
                    [
                        file(params.pipelines_testdata_base_path + 'test_data/modules/mgnifams_test_1.faa', checkIfExists: true)
                    ]
                ])
                """
            }
        }
    }

    test("proteinfamilies - faa") {

        when {
            process {
                """
                input[0] = SPLIT_FASTA.out.split_files
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    path(process.out.samplesheet[0][1]).readLines().size(),
                    process.out.versions.collect { path(it).yaml }
                ).match()}
            )
        }
    }

    test("proteinfamilies - faa - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = SPLIT_FASTA.out.split_files
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }
}
